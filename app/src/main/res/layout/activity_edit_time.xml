<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Event Time"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#065F46"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textColor="#757575"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Select Start Time"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableEnd="@android:drawable/ic_menu_recent_history"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textColor="#757575"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Select End Time"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableEnd="@android:drawable/ic_menu_recent_history"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Extend"
        android:textColor="#757575"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btnExtend15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+15m"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="#065F46"
            app:strokeColor="#065F46"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnExtend30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+30m"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="#065F46"
            app:strokeColor="#065F46"
            android:layout_marginHorizontal="4dp"/>

        <Button
            android:id="@+id/btnExtend60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+1h"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="#065F46"
            app:strokeColor="#065F46"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveTime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Update Time"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#065F46"
        android:textColor="#FFFFFF"/>

</LinearLayout>