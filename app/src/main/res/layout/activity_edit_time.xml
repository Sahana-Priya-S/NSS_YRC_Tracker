<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Attendance Time"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/currentTimeWindowTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Window: 10:00 AM - 12:00 PM"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/editStartTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set New Start Time"/>

    <Button
        android:id="@+id/editEndTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set New End Time"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/extendTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Extend by minutes (e.g., 15)"
        android:inputType="number"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/extendTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extend End Time"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/saveTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:background="@drawable/background_button_primary"
        android:textColor="@color/white"
        android:minHeight="56dp"/>
</LinearLayout>