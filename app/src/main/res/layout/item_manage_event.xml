<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/eventTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/startAttendanceButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:text="Start"
                android:textColor="@color/status_green"/>

            <Button
                android:id="@+id/stopAttendanceButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:text="Stop"
                android:textColor="@color/status_red"/>

            <Button
                android:id="@+id/editTimeButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:text="Edit Time"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/completeEventButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:text="Complete"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/editEventButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:text="Edit Details"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/viewRegistrationsButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:text="View Subs"
                android:textColor="@color/primary"/>
        </GridLayout>

        <Button
            android:id="@+id/deleteEventButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="@color/status_red"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>