<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="16dp">

        <TextView
            android:id="@+id/adminDashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="start|center_vertical"/>

        <Button
            android:id="@+id/logoutButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/white"
            android:layout_gravity="end|center_vertical"/>
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="12dp">

        <Button
            android:id="@+id/addEventButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="Add Event"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/manageEventsButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="Manage"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/approvalsButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="Approvals"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/archivesButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="Archives"
            android:textColor="@color/primary"/>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Events"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingVertical="8dp"/>
</LinearLayout>